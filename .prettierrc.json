{
  "trailingComma": "none",
  "tabWidth": 2,
  "useTabs": false,
  "semi": false,
  "singleQuote": true,
  "arrowParens": "avoid",
  "printWidth": 125,
  "endOfLine": "crlf",
  "overrides": [
    {
      "files": "*.tsx",
      "options": {
        "tabWidth": 2,
        "useTabs": false,
        "jsxSingleQuote": false
      }
    }
  ],
  "importOrder": ["<BUILTIN_MODULES>", "fs", "express", "<THIRD_PARTY_MODULES>", "^[.]", "^@lib"],
  "plugins": ["@ianvs/prettier-plugin-sort-imports"]
}
